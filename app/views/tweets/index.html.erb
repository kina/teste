
<h1>Search tweets from user</h1>
<%= form_tag "tweets", method: "get" do %>
  <%= text_field_tag :user_name, params[:user_name], placeholder: "Search User", autofocus: "autofocus" %>
  <%= submit_tag "Search" %>
<% end %>

<ul id="tweets">
    <% @tweets.each do |tweet| %>
      <%= render partial: "tweet", locals: {tweet: tweet}%>
    <% end %>
</ul>

<br>

<%=link_to "Logout", destroy_user_session_path, method: :delete %>